<section>
    <div class="container">
        <div class="row">
            <div class="mt-4">
                <table>
                    <thead>
                        <th scope="col">Item</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                        <th scope="col">quantity</th>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <td><img src="/product-images/{{this.product._id}}.png" style="width:150px; height:150px;"></td>
                        <td>{{this.product.Name}}</td>
                        <td>{{this.product.Price}}</td>
                        <td>{{this.quantity}}</td>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>