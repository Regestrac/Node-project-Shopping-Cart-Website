{{!-- Edit product button leads to this page --}}
{{!-- This shows a form to edit products in database --}}
<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-12 col-lg-6">
                <h2 class="text-center">Edit Product</h2>
                <form action="/admin/edit-product/{{product._id}}" method="POST" enctype="multipart/form-data">
                   
                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" value="{{product.Name}}">
                   
                    <label for="">Category</label>
                    <input type="text" name="Category" class="form-control" value="{{product.Category}}">
                   
                    <label for="">Price</label>
                    <input type="number" name="Price" class="form-control" value={{product.Price}}>
                    
                    <label for="">Description</label>
                    <input type="text" name="Description" class="form-control" value="{{product.Description}}">
                    
                    <label for="">Image</label>
                    <img src="/product-images/{{product._id}}.png" alt="Image" style="width: 100px; height: auto;" id="imgview" class="p-2">    <!-- Shows preview of current image -->
                    <input type="file" name="Image" class="form-control" onchange="viewImage(event)">     <!-- Change image preview on selecting new image -->
                    
                    <button type="submit" class="btn btn-success mt-4">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>
<script>
    function viewImage(event) {
        document.getElementById('imgview').src=URL.createObjectURL(event.target.files[0])   //Helps to change preview
    }
</script>