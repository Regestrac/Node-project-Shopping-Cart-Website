<!-- Shows the details of products added to database as table in the Admin Pannel -->
<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add New Product</a> <!-- Button to add new productsto database -->
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Title</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.Name}}</td>
                    <td>{{this.Price}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.Description}}</td>
                    <td><img  style="width:100px" src="/product-images/{{this._id}}.png" alt="Img"></td> {{!-- Saves image name ad the collection id --}}
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary ml-auto">Edit</a>      <!-- Button for editing Product details and to delete a product from admin pannel-->
                        <a href="/admin/delete-product?id={{this._id}}" class="btn btn-danger ml-auto" onclick="return confirm('Are you sure you want to delete {{this.Name}} from the list?')">Delete</a> 
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
